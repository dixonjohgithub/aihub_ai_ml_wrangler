# Environment Configuration Template
# Copy this file to .env.dev for development or .env.prod for production

# Database Configuration
POSTGRES_DB=aihub_prod
POSTGRES_USER=aihub_user
POSTGRES_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# Application Secrets
SECRET_KEY=your_super_secure_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# Celery Configuration
CELERY_WORKERS=2
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Monitoring (Flower)
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# External Services (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1

# Logging
LOG_LEVEL=INFO

# Development specific
DEBUG=false
ENVIRONMENT=production

# SSL/TLS (for production with HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem